{
  "name": "Sales Dashboard Development",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "sales_dashboard.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [88],
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "workbench.colorTheme": "Default Dark+",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "visualstudioexptteam.vscodeintellicode",
        "redhat.vscode-yaml",
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": false
    }
  },

  "updateContentCommand": [
    "sudo apt-get update",
    "sudo apt-get upgrade -y",
    "[ -f packages.txt ] && sudo xargs apt-get install -y < packages.txt",
    "[ -f requirements.txt ] && pip3 install --user -r requirements.txt",
    "pip3 install --user streamlit pandas numpy plotly",
    "echo 'âœ… Development environment setup complete'"
  ],

  "postAttachCommand": {
    "server": "streamlit run sales_dashboard.py --server.enableCORS false --server.enableXsrfProtection false --server.headless true"
  },

  "portsAttributes": {
    "8501": {
      "label": "Sales Dashboard",
      "onAutoForward": "openPreview",
      "protocol": "http",
      "requireLocalPort": true
    }
  },

  "forwardPorts": [8501],

  "postCreateCommand": "git config --global core.editor 'code --wait'",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "PYTHONUNBUFFERED": "1"
  }
} 
